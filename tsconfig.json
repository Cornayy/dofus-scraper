{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "esnext",
        "sourceMap": true,
        "outDir": "./lib",
        "baseUrl": "./",
        "incremental": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
}
